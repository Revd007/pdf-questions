{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "outDir": "dist",
    "types": ["node"],
    "lib": ["ES2022"],
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/dist/**",
    "**/build/**"
  ],
  "ts-node": {
    "esm": true
  }
}
