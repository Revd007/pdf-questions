{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "outDir": "dist",
    "types": ["node"],
    "lib": ["ES2022"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
